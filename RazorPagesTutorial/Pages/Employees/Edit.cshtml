@page "{id:min(1)}"
@model RazorPagesTutorial.Pages.Employees.EditModel
@{
    ViewData["Title"] = "Edit";
    var photoPath = "~/images/" + (Model?.Employee?.PhotoPath ?? "noimage.jpg");
}

<h1>Edit Employee</h1>

<form method="post" asp-page-handler="edit" role="form" class="mt-3" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <input hidden asp-for="Employee.Id" class="col-sm-2 col-form-label" />

    <div class="form-group row mb-3">
        <label asp-for="Employee.Name" class="col-sm-2 col-form-label" ></label>
        <div class="col-sm-10">
            <input asp-for="Employee.Name" class="form-control" placeholder="Name" />
        </div>
    </div>

    <div class="form-group row mb-3">
        <label asp-for="Employee.Email" class="col-sm-2 col-form-label" ></label>
        <div class="col-sm-10">
            <input asp-for="Employee.Email" class="form-control" placeholder="Email" />
        </div>
    </div>

    <div class="form-group row mb-3">
        <label asp-for="Employee.Department" class="col-sm-2 col-form-label" ></label>
        <div class="col-sm-10">
            <select asp-for="Employee.Department" class="custom-select mr-sm-2" style="width: 100%"
                    asp-items="Html.GetEnumSelectList<Dept>()">
                    <option value="">Please select</option>
            </select>
        </div>
    </div>

    <div class="form-group row mb-4">
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                 <input asp-for="Photo" class="custom-file-input form-control" />
            </div>
        </div>
    </div>

    <div class="form-group row col-sm-4 offset-4">
        <img class="imageThumbnail" src="@photoPath" asp-append-version="true" />
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" >Update</button>
            <a asp-page="/Employees/Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>